  "update.mode": "manual",
  "settingsSync.ignoredExtensions": ["plastic-scm.plastic-scm", "mkhl.direnv"],
  "workbench.layoutControl.enabled": false,

  //========== Editor ==========//
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.txt": "default",
    "*.pdf": "latex-workshop-pdf-hook",
    "git-rebase-todo": "gitlens.rebase"
  },

  "files.associations": {
    "*.js": "javascript",
    ".greeble": "coffeescript",
    "*.y": "yacc"
  },

  // "workbench.list.keyboardNavigation": "highlight", // Old
  // "workbench.list.typeNavigationMode": "trigger", // Overridden by VsVim regardless
  "workbench.list.defaultFindMode": "highlight",

  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.cursorSmoothCaretAnimation": "off",
  "editor.cursorSurroundingLines": 5,
  "editor.fontFamily": "Fira Code, Hack Nerd Font, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.showSlider": "always",
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "workbench.editor.empty.hint": "hidden",

  "diffEditor.ignoreTrimWhitespace": true,
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": true,

  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  "security.workspace.trust.untrustedFiles": "open",
  "vsicons.dontShowNewVersionMessage": true,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
