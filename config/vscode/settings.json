  "github.copilot.selectedCompletionModel": "gemini-2.5-flash",
  "githubPullRequests.pullBranch": "never",
  "gitlens.ai.experimental.model": "gemini:gemini-1.5-flash-latest",
  "gitlens.plusFeatures.enabled": false,

